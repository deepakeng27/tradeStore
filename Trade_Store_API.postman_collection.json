{
  "info": {
    "name": "Trade Store API",
    "description": "API collection for Trade Store application with version control, maturity validation, and event streaming",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Trade",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tradeId\": \"T1\",\n  \"version\": 1,\n  \"counterPartyId\": \"CP-1\",\n  \"bookId\": \"B1\",\n  \"maturityDate\": \"2026-05-20\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/trades",
          "host": ["{{base_url}}"],
          "path": ["trades"]
        }
      }
    },
    {
      "name": "Get Trade by ID",
      "request": {
        "method": "GET",
